<?xml version="1.0" ?>
<robot name="candynamix" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:include filename="$(find candynamix_description)/urdf/common_properties.xacro"/>
    <xacro:include filename="$(find candynamix_description)/urdf/candynamix.gazebo.xacro"/>

    <link name="base_footprint">
        <inertial>
            <mass value="0.0001"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="0.001 0.001 0.001"/>
            </geometry>
        </visual>
    </link>

    <link name="base_link">
        <visual>
            <!-- <origin xyz="-0.02 0 0.01" rpy="0 0 0" /> -->
            <origin xyz="-0.0345 0.112 0.062" rpy="0 0 3.14"/>
            <geometry>
                <!-- <cylinder length="0.04" radius="0.06" /> -->
                <mesh filename="package://candynamix_description/meshes/bases/candynamix_base.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="-0.01 0 0.015" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.055" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="5"/>
                <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.05" />
        </inertial>
    </link>

    <link name="l_wheel">
        <visual>
            <!-- <origin xyz="0 0 0" rpy="${90*3.14/180} 0 0" /> -->
            <origin xyz="0 0 0" rpy="${-90*3.14/180} 0 0" />
            <geometry>
                <!-- <cylinder length="0.005" radius="0.02" /> -->
                <mesh filename="package://candynamix_description/meshes/wheels/left_tire.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0.005 0" rpy="${90*3.14/180} 0 0" />
            <geometry>
                <cylinder length="0.005" radius="0.017" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0.0 0" rpy="0 0 0"/>
            <mass value="2.5"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.002" />
        </inertial>
    </link>

    <link name="r_wheel">
        <visual>
            <!-- <origin xyz="0 0 0" rpy="${90*3.14/180}0 0 0" /> -->
            <origin xyz="0 0 0" rpy="${90*3.14/180} 0 0" />
            <geometry>
                <!-- <cylinder length="0.005" radius="0.02" /> -->
                <mesh filename="package://candynamix_description/meshes/wheels/right_tire.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 -0.005 0" rpy="${90*3.14/180} 0 0" />
            <geometry>
                <cylinder length="0.005" radius="0.017" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="2.5"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.002" />
        </inertial>
    </link>

    <link name="caster_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.008" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.01" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.017" rpy="0 0 0"/>
    </joint>

    <joint name="l_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="l_wheel"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0 0.038 0" rpy="0 0 0"/>
        <joint_properties damping="0.0" friction="0.0"/>
    </joint>

    <joint name="r_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="r_wheel"/>
        <axis xyz="0 1 0"/>
        <origin xyz="0 -0.038 0" rpy="0 0 0"/>
        <joint_properties damping="0.0" friction="0.0"/>
    </joint>

    <joint name="caster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel"/>
        <origin xyz="-0.055 0 -0.006" rpy="0 0 0"/>
    </joint>

    <link name="base_scan" type="fixed">
        <visual>
            <origin xyz="0 0 0" rpy="${90*3.14/180} 0 ${90*3.14/180} "/>
            <geometry>
                <mesh filename="package://candynamix_description/meshes/sensors/HC-SR04-UltrasonicSensor.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
    </link>

    <joint name="scan_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_scan"/>
        <origin xyz="0.03 0 0.016" rpy="0 0 0 "/>
    </joint>

    <link name="imu_link"/>

    <joint name="imu_joint" type="fixed">
        <parent link="base_link"/>
        <child link="imu_link"/>
        <origin xyz="-0.032 0 0.068" rpy="0 0 0"/>
    </joint>
</robot>